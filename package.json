{
  "name": "linter-elixirc",
  "version": "1.7.0",
  "linter-package": true,
  "main": "./lib/init",
  "description": "Bare Minimum Elixir lint package",
  "repository": "https://github.com/AtomLinter/linter-elixirc",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "elixircPath": {
      "type": "string",
      "title": "Elixirc path",
      "default": "elixirc"
    },
    "mixPath": {
      "type": "string",
      "title": "Mix path",
      "default": "mix"
    },
    "forceElixirc": {
      "type": "boolean",
      "title": "Always use elixirc",
      "description": "Activating this will force the plugin to never use `mix compile` and always use `elixirc`.",
      "default": false
    },
    "mixEnv": {
      "type": "string",
      "title": "Mix environment to use for linting",
      "description": "Setting the Mix environment can avoid collisions between linter compiles and IEx sessions.",
      "default": "dev"
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter:2.0.0",
    "language-elixir"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.5.0",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "fs-extra": "^4.0.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
